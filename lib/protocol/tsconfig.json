{
  "extends": "@aidenlx/eslint-config",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "moduleResolution": "Node16",
    "module": "Node16",
    "incremental": true,
    "noEmit": false,
    "allowJs": true
  },
  "include": ["src/**/*.ts"],
}
